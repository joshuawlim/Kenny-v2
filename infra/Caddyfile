:80 {
  encode zstd gzip
  
  # Gateway Service (new unified API)
  handle /gateway/* {
    reverse_proxy gateway:9000
  }
  
  # Agent Registry Service
  handle /registry/* {
    reverse_proxy agent-registry:8000
  }
  
  # API Service
  handle /api/* {
    reverse_proxy api:80
  }
  
  # UI Service (default)
  handle /* {
    reverse_proxy ui:3000
  }
}


